      </div>
      <div class="show-page" id="showmodel">
        <span onclick="showModel()">Dòng sản phẩm</span>
        <span onclick="showDetail()">Các sản phẩm</span>
        <div class="col-md-6" id="box-search">

          <div class="form">
            <i class="fa fa-search"></i>
            <input type="text" class="form-control form-input" placeholder="Nhập tên sản phẩm.." id="input_search">
           
          </div>
    </div><div id="list_product">
         <div class="show-content" id="column">

             <div>ID_Product</div>
             <div class="box2">Name</div>
             <div> Hãng </div>
             <div>Giá</div>
             <div>Action</div>
         </div>
         
         <% for(let i=0 ; i < list_Product.length;i++ ){%>
         <div class="show-content">
           <div><%=list_Product[i].ProductID %></div>
           <div class="box2"><%=list_Product[i].Name%></div>
           <div><%=list_Product[i].Brand%></div>
           <div><%=list_Product[i].Price%></div>
           <div>
               <a href=""><i class="fas fa-pencil-alt"></i></a>
               <button style="color: black; margin-left: 0.5rem;" onclick="deleteProduct('<%=list_Product[i].ProductID %>')"><i class="fas fa-times"></i></button >
           </div>
       </div>
      <%}%>
    </div>
       </div>

          <div class="show-page" id="showdetail">
            <span onclick="showModel()">Dòng sản phẩm</span>
            <span onclick="showDetail()">Các sản phẩm</span>
            <div class="col-md-6" id="box-search">

              <div class="form">
                <i class="fa fa-search"></i>
                <input type="text" class="form-control form-input" placeholder="Nhập tên sản phẩm.." id="input_search">
               
              </div>
            </div>
             <div class="show-content" id="column">
                 <div>ID_ProductDetail</div>
                 <div class="box2">Name</div>
                 <div> Hãng </div>
                 <div>Giá</div>
                 <div>Color</div>
                 <div class="action">Action</div>
             </div>
             
         <% for(let i=0 ; i < list_ProductDetail.length;i++ ){%>
             <div class="show-content">
               <div><%=list_ProductDetail[i].id_detail%></div>
               <div class="box2"><%=list_ProductDetail[i].Name%></div>
               <div><%=list_ProductDetail[i].Brand%></div>
               <div><%=list_ProductDetail[i].price%></div>
               <div><%=list_ProductDetail[i].color%></div>
               <div class="action">
                   <a href=""><i class="fas fa-pencil-alt"></i></a>
                   <button style="color: black; margin-left: 0.5rem;" onclick="deleteDetail('<%=list_ProductDetail[i].id_detail%>')" > <i class="fas fa-times"></i></button >
               </div>
           </div>
           <%}%>
           </div>
         
       </div>
      </div>
     
